val Number lowBatteryThreshold = 4.0

rule "TheAirboard Low Battery Notification"
  when
    Item AirboardStatusBattery changed
  then
    if (AirboardStatusBattery.status < lowBatteryThreshold) {
    sendNotification()
    }
  end

rule "TheAirboard LED Control"
  when
    Item ledIndex changed
  then
      sendCommand(BedroomTemperature, temperature)
  end
